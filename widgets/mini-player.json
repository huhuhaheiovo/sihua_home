{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.6",
  "speak": "The Seattle Seahawks beat the Carolina Panthers 40-7",
  "body": [
    {
      "type": "TextBlock",
      "text": "流日四化",
      "wrap": true,
      "style": "heading",
      "horizontalAlignment": "center"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://adaptivecards.io/content/cats/3.png",
                  "size": "medium",
                  "altText": "Shades cat team emblem"
                },
                {
                  "type": "TextBlock",
                  "text": "${zhou}",
                  "horizontalAlignment": "center",
                  "weight": "bolder",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "separator": true,
              "spacing": "medium",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${formattedDate}",
                  "horizontalAlignment": "center",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "${implement}",
                  "spacing": "none",
                  "horizontalAlignment": "center",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "${time}",
                  "size": "extraLarge",
                  "horizontalAlignment": "center",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "separator": true,
              "spacing": "medium",
              "items": [
                {
                  "type": "Image",
                  "url": "https://adaptivecards.io/content/cats/2.png",
                  "size": "medium",
                  "horizontalAlignment": "center",
                  "altText": "Skins cat team emblem"
                },
                {
                  "type": "TextBlock",
                  "text": "${isFriday}",
                  "horizontalAlignment": "center",
                  "weight": "bolder",
                  "wrap": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "${lunarDate}",
      "wrap": true,
      "size": "Default",
      "style": "heading",
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "${sihua}",
      "wrap": true,
      "size": "Default",
      "style": "heading",
      "horizontalAlignment": "center"
    }
  ]
}
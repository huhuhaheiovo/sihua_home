{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Large",
      "text": "${message}",
      "horizontalAlignment": "Center",
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "id": "userInput",
      "placeholder": "请输入内容",
      "label": "输入框"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "提交",
      "verb": "submit",
      "style": "positive"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
} 